<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnUpperLeft"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="outerButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnUpperRight"
        android:layout_alignBottom="@+id/btnUpperLeft"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="outerButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnLowerLeft"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="outerButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnLowerRight"
        android:layout_alignBottom="@+id/btnLowerLeft"
        android:layout_alignRight="@+id/btnUpperRight"
        android:layout_alignEnd="@+id/btnUpperRight"
        android:onClick="outerButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnMid"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="middleButtonOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Simon Says"
        android:id="@+id/txtResult"
        android:layout_above="@+id/btnMid"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:clickable="false" />

</RelativeLayout>
